<div class="row pt-4">
  <div class="col-12 col-sm-8 offset-sm-2">
    <% if notice.present? %>
      <div class="alert alert-info" role="alert">
        <%= notice %>
      </div>
    <% elsif alert.present? %>
      <div class="alert alert-warning" role="alert">
        <%= alert %>
      </div>
    <% end %>
  </div>
</div>
