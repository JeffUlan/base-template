<div class="row pt-5">
  <div class="col-12 col-sm-4 offset-sm-4">
    <div class="card">
      <div class="card-body shadow pt-5">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group">
            <%= f.label :password, "New password" %><br/>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control form-control-lg', required: true %>
            <% if @minimum_password_length %>
              <small>(<%= @minimum_password_length %> characters minimum)</small>
              <br/>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Confirm new password" %><br/>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control form-control-lg', required: true %>
          </div>

          <div class="text-center pt-5">
            <%= f.submit "Change Password", class: 'btn btn-lg btn-success' %>
          </div>
        <% end %>

        <div class="pt-4 text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div
  </div>
</div>
